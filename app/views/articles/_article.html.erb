<div class="bg-white shadow overflow-hidden sm:rounded-lg mt-8">
  <div class="px-4 py-5 sm:px-6">
    <h3 class="text-lg leading-6 font-medium text-gray-900">
        <%= link_to article.title, article_path(article) %>
    </h3>
    <%#
    <p class="mt-1 max-w-2xl text-sm text-gray-500">
      Personal details and application.
    </p>
    %>
  </div>
  <div class="border-t border-gray-200">
    <dl>
      <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500">Title</dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
          <%= article.title %>
        </dd>
      </div>
      <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500">Description</dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <% max_length = 20 %>
            <% if article.description.length > max_length %>
                <%= truncate(article.description, length: max_length) %>  <%= link_to "View full", article_path(article), class: "text-indigo-600 hover:text-indigo-900" %>
            <% else %>
                <%=  article.description%>
            <% end %>
        </dd>
      </div>
      <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500">Actions</dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
           <%= link_to "Show", article_path(article), class: "text-indigo-600 hover:text-indigo-900 mr-4" %>
            <%= link_to "Edit", edit_article_path(article), class: "text-indigo-600 hover:text-indigo-900 mx-4" %>
            <%= link_to "Delete", article_path(article), data: { "turbo-method": :delete, "turbo-confirm": "are you sure?" }, class: "text-red-600 hover:text-red-700 mx-4" %>
        </dd>
      </div>
    </dl>
  </div>
</div>
