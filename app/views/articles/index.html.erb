<h1>Articles Listing Page</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
        <tr>
            <td><%= article.title %></td>
            <td><%= article.description %></td>
            <td>
              <%= link_to "Show", article_path(article) %>
              <%= link_to "Edit", edit_article_path(article) %>
            </td>
        </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to "New article", new_article_path %>
