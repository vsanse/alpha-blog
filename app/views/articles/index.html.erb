<div class="flex item-center justify-between">
  <h1 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate">Articles Listing Page</h1>
  <div class="flex">
    <% if logged_in? %>
      <%= link_to current_user.fullname, user_path(current_user), class: "text-blue-600" %>
      <%= button_to "Logout", logout_path, method: :delete, class: "text-red-600 ml-4" %>
    <% end %>
  </div>

</div>
<div class="flex flex-col mb-3">
  <% if @articles.empty?  %>
    <%= render "layouts/alert", msg: "No Articles found. Please create one using button below" %>
  <% else %>
    <% @articles.each do |article| %>
      <%= render partial:'article', locals: {article: article} %>
    <% end %>
  <% end %>
</div>
<% if logged_in? %>
  <%= link_to "New article", new_article_path, class: "mr-4 inline-flex bg-green-800 hover:bg-green-900 text-white font-bold py-2 px-4 rounded" %>

<% end %>
<%= render 'shared/back-btn', title: "Back Home", path: root_path%>
